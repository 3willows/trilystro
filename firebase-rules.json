{
  "rules": {
    "shared": {
      ".read": true,
      "lystros":      { "$uid": { ".write": "$uid === auth.uid" } },
      "user-details": { "$uid": { ".write": "$uid === auth.uid" } }
    },
    "private": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
