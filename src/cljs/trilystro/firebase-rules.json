{
  "rules": {
    "public": {
      ".read": true,
      "tags": {
        "$tag_entry": {
          ".write": " !data.exists()"
        }
      }
    },
    "shared": {
      ".read": true,
      "items":        { "$uid": { ".write": "$uid === auth.uid" } },
      "user-details": { "$uid": { ".write": "$uid === auth.uid" } }
    },
    "private": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
